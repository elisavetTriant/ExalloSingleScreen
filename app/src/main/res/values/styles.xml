<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Headings">
        <item name="android:layout_margin">@dimen/elements_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorHeadings</item>
    </style>

    <style name="MainText">
        <item name="android:layout_margin">@dimen/elements_margin</item>
        <item name="android:textSize">@dimen/font_size_main_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
